        <%= f.input :message, label: 'Votre demande', as: :text, required: false, input_html: { rows: 10 }, placeholder: 'Minimum de 15 caractères, maximum de 2000', error: "Minimum 15 caractères, maximum 2000", error_html: { class: 'input_error'} %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, 'Envoyer', class: "btn button-submit"%>
      </div>
    <% end %>
